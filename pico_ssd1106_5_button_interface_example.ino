void setup() {
  // put your setup code here, to run once:
  // Initalize OLED SCREEN
  u8g2.begin();
  // Set Brightness to Max 0-255
  u8g2.setContrast(255);
  //Set button pins to input
  for(int i=0;i<5;i++){
    pinMode(buttonPins[i],INPUT_PULLUP);
  }
  //Show boot logo for 6.6 seconds while modifying brightness.
  u8g2.clearBuffer();
	u8g2.drawXBMP(0, 0, 128, 64, epd_bitmap_oledlogo);
  u8g2.sendBuffer();
  // Pulse contrast from 0 to 255 over 3 seconds
  unsigned long startTime = millis();
  int contrast = 0;
  int direction = 5; // Step size

  while (millis() - startTime < 6600) {
    u8g2.setContrast(contrast);
    contrast += direction;

    // Reverse direction at bounds
    if (contrast >= 255 || contrast <= 0) {
      direction = -direction;
    }
      delay(20); // Controls pulse speed
    }
    // Set Brightness to Max 0-255
    u8g2.setContrast(255);
    delay(1000); // Hold at full contrast for a moment 1 second
  }

void loop() {
  // put your main code here, to run repeatedly:
  // Read button status
  for(int i = 0;i<5;i++){
    buttonStates[i]=digitalRead(buttonPins[i])==LOW;
  }
  // Clear screen
  u8g2.clearBuffer();
  // Print button status to screen
  for(int i = 0;i<5;i++){
    // Small Font
    u8g2.setFont(u8g2_font_6x10_tf);
    // Line Positioning
    u8g2.setCursor(0,12+i*12);
    // Print which button pressed to screen
    u8g2.print("GP");
    u8g2.print(buttonPins[i]);
    u8g2.print(": ");
    u8g2.print(buttonStates[i] ? "ON" : "OFF");
  }
  // Update screen
  u8g2.sendBuffer();

  // Delay between reads
  delay(100);

}
